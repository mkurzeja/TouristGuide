@{
    ViewBag.Title = "New Attraction";

}
@model IEnumerable<TouristGuide.Models.Attraction>
@using (Html.BeginForm("AddNewAttraction", "AttractionsList"))
{
    <fieldset>
        <legend>Attraction:</legend>
        @Html.DropDownList("Attractions", new SelectList(Model,"ID","Name"))
        <input type="submit" value="Add" />
        <input type="hidden" name="list" value=" @ViewBag.listID"/>
    </fieldset>
}
@Html.ActionLink(" ", "Index", "AttractionsList", new {id = @ViewBag.listID}, new { @class = "imgBack", })